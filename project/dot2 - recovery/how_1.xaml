<Page
    x:Class="dot2.how_1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dot2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="_1st" Margin="0,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="471" RenderTransformOrigin="0.5,0.5" FontSize="44" Text="Tilt your device in that direction where you want to move that white dot on the rings. You have to transfer it between  the rings" HorizontalAlignment="Left" Width="390" Foreground="Cyan" TextAlignment="Center" FontFamily="Microsoft Uighur"/>
        <Button x:Name="how_1_next" Content="NEXT" HorizontalAlignment="Left" Margin="247,527,0,0" VerticalAlignment="Top" FontSize="32" BorderBrush="{x:Null}" Click="how_1_next_Click" Foreground="Cyan" FontWeight="Normal"/>
        <Button x:Name="how_1_back" Content="BACK" HorizontalAlignment="Left" Margin="43,527,0,0" VerticalAlignment="Top" FontSize="32" BorderBrush="{x:Null}" Click="how_1_back_Click" Foreground="Cyan"/>
    </Grid>
</Page>
