<Page
    x:Class="dot2.how_3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dot2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="_1st" Margin="0,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="476" RenderTransformOrigin="0.5,0.5" FontSize="44" Text="TAP anywhere on the screen to transfer dot between rings. If you are in a red ring, speed will increase for 8 seconds." HorizontalAlignment="Left" Width="400" Foreground="Cyan" FontFamily="Microsoft Uighur" TextAlignment="Center"/>
        <Button x:ConnectionId='1' x:Name="how_3_next" Content="Next" HorizontalAlignment="Left" Margin="247,527,0,0" VerticalAlignment="Top" FontSize="32" BorderBrush="{x:Null}"                          Foreground="Cyan"/>
        <Button x:ConnectionId='2' x:Name="how_3_back" Content="Back" HorizontalAlignment="Left" Margin="43,527,0,0" VerticalAlignment="Top" FontSize="32" BorderBrush="{x:Null}"                          Foreground="Cyan"/>
    </Grid>
</Page>

